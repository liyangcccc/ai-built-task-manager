  "version": "1.0.0",
  "description": "A full-stack personal task management application",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "dev": "bash scripts/dev.sh",
    "build": "bash scripts/build.sh",
